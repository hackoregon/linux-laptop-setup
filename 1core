#! /bin/bash

echo "syncing package repo metadata"
sudo apt-get update > /dev/null

echo "upgrading any packages that need it"
sudo apt-get upgrade -y > upgrade.log 2>&1

echo "installing the core packages"
sudo apt-get install -qqy \
  apt-file \
  curl \
  dkms \
  gdebi \
  git \
  wget \
  > 1core.log 2>&1

echo "updating the apt-file index"
sudo apt-file update > /dev/null
