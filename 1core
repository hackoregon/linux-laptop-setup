#! /bin/bash

# sync package repo metadata
sudo apt-get update

# upgrade any packages that need it
sudo apt-get upgrade -y

# install the core packages
sudo apt-get install -y \
  apt-file \
  aria2 \
  curl \
  dkms \
  gdebi \
  git \
  lynx \
  vim-nox \
  virtualenvwrapper \
  wget

# run apt-file update
sudo apt-file update

# set vim as default editor
sudo cp set-editor.bash /etc/profile.d/

echo "Log out and back in to set required Python virtualenvwrapper environment variables!"
