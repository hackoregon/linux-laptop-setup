#! /bin/bash

# sync package repo metadata
sudo apt-get update

# upgrade any packages that need it
sudo apt-get upgrade -y

# install the core packages
sudo apt-get install -qqy \
  apt-file \
  aria2 \
  curl \
  dkms \
  gdebi \
  git \
  lynx \
  vim-nox \
  wget

# run apt-file update
sudo apt-file update
